{
  "manifest_version": 3,
  "name": "Application Assistant Extension",
  "version": "1.0",
  "description": "Helps users copy personal details and documentation for easy applications",
  "permissions": [
    "clipboardWrite",
    "storage",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html"
}