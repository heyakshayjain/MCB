{
    "appId": "com.mcb.desktop",
    "productName": "MCB Cloud Browser",
    "directories": {
        "buildResources": "public",
        "output": "dist"
    },
    "files": [
        "build/**/*",
        "public/electron.js",
        "public/preload.js",
        "node_modules/**/*"
    ],
    "extraResources": [
        {
            "from": "../venv",
            "to": "venv",
            "filter": [
                "**/*"
            ]
        },
        {
            "from": "../",
            "to": "backend",
            "filter": [
                "*.py",
                "requirements.txt"
            ]
        }
    ],
    "mac": {
        "category": "public.app-category.productivity",
        "target": [
            "dmg",
            "zip"
        ],
        "icon": "public/icon.icns"
    },
    "win": {
        "target": [
            "nsis",
            "portable"
        ],
        "icon": "public/icon.ico"
    },
    "linux": {
        "target": [
            "AppImage",
            "deb"
        ],
        "category": "Utility",
        "icon": "public/icon.png"
    }
}